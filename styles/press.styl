body
  .wrapper.press
    padding 100px 20px
    max-width: 750px

    &.article
      h1
        font-size 50px

      .meta
        margin-bottom 30px


    h1
      font-size 80px
      color $dark
      text-align center

    h2
      font-size: 27px
      margin 40px 0 0

      a
        color $dark

        &:hover
          color $blue

    h3
      margin 0 0 6px

    p
      margin 0 0 30px 0

    a
      color $blue
      margin 10px 0 0

      &.post-link
        display block

    .meta
      margin-bottom 10px
      opacity: 0.7

      span
        margin-right 20px

