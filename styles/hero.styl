.hero
  position relative
  width 100%
  height 600px
  overflow hidden

  .overlay
    position: absolute
    width 100%
    height 100%
    top 0
    left 0

    &.gradient
      background linear-gradient(45deg, rgba(174,219,87,0.3) 0%, rgba(65,208,250,0.3) 100%);
      z-index: 1

    &.dark
      background rgba(black,0.1)
      z-index: 2
      display table

      h1
        margin-top 240px

      .learn-more
        position relative
        display inline-block
        margin 30px 0 0 0
        cursor pointer

        &:hover:after
          transform translateY(5px)

        &:after
          content ''
          background-image url('../img/arrow.svg')
          background-size contain
          background-repeat no-repeat
          background-position center center
          transition all 150ms ease
          position: absolute
          bottom -20px
          left 0
          width 100%
          height 8px

  video
    position absolute
    right 0
    left 0
    top 0
    max-width 100%
    mix-height 100%
    width auto
    height auto
    z-index -100
    background url('../img/bg.jpg') no-repeat
    background-size cover

@media $media-tablet

  .hero
    video
      height 100%
      max-width 150%
      width auto

@media $media-mobile

  .hero
    background url('../img/static-bg.jpg')
    background-size cover
    background-repeat no-repeat
    background-position center center
    height 500px

    video
      display none

    .overlay
      &.dark

        h1
          margin-top 170px

@media $media-mobile-portrait
  .hero
    .overlay
      &.dark

        h1
          margin-top 110px