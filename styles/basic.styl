// EASING

$easing = cubic-bezier(0.645, 0.045, 0.355, 1)

// COLORS

$dark = #444444
$mid = #626262
$blue = #3FCBF3
$darkblue = #3E4357
$green = #AEDB57
$white = #fafafa
$yellow = #EFD214

// FONTS

$body = "open-sans", sans-serif

// BREAKPOINTS

$media-desktop-wide = 'all and (min-width: 2180px)'
$media-desktop-big = 'all and (min-width: 1550px)'
$media-desktop = 'all and (min-width: 940px)'
$media-tablet = 'all and (max-width: 940px)'
$media-tablet-portrait = 'all and (max-width: 800px)'
$media-full-width = 'all and (max-width: 749px)'
$media-mobile = 'all and (max-width: 640px)'
$media-mobile-portrait = 'all and (max-width: 480px)'
$media-tiny = 'all and (max-width: 360px)'
$media-too-high = 'screen and (min-height: 1240px)'
$media-mobile-device = 'only mobile'

// GENERAL

html, body
  width 100%

body
  -webkit-font-smoothing antialiased
  background $white
  margin 0 auto
  font-family $body
  color $dark

  .wrapper
    box-sizing border-box
    width 940px
    padding 0 20px
    margin 0 auto

  .divider
    background-color rgba(black,0.1)
    width 100px
    margin 80px auto
    height 1px

// TYPOGRAPHY

h1
  color white
  font-weight $fontWeightLight
  font-size ($defaultFontSize*2.8125)

h2
  font-size ($defaultFontSize*2.5)
  font-weight $fontWeightBold
  margin -16px 0 10px

  &.small
    font-size ($defaultFontSize*2)
    line-height ($defaultFontSize*2.375)
    font-weight $fontWeightLight
    margin 10px 0 0 0

h3
  color $blue
  font-weight $fontWeightLight
  font-size ($defaultFontSize*1.5)
  line-height ($defaultFontSize*2.25)
  background -webkit-linear-gradient(45deg, rgba(174,219,87,1.0) 0%, rgba(65,208,250,1.0) 100%);
  -webkit-background-clip text
  -webkit-text-fill-color transparent

  &.big
    font-size ($defaultFontSize*1.75)
    line-height ($defaultFontSize*2.375)
    margin-bottom 16px

h4
  font-weight $fontWeightHeavy
  margin 0 0 8px

a
  color $mid
  text-decoration none

p
  font-size ($defaultFontSize*1.125)
  line-height ($defaultFontSize*1.7875)
  font-weight $fontWeightLight

  &.small
    font-size ($defaultFontSize*0.875)
    line-height ($defaultFontSize*1.3125)

blockquote
  padding-left 20px
  border-left 3px solid rgba(black,0.1)

// FUNCTIONAL CLASSES

.hidden
  display none !important

.center
  text-align center

.inline
  display inline

.right
  float right

.left
  float left

.clearfix
  clear both


// COLUMNS

.cols
  font-size 0

  .col
    vertical-align top
    display inline-block

  .col-33
    width 33.334%

  .col-50
    width 50%

  .col-60
    width 60%

  .col-40
    width 40%

// BUTTONS

.button
  text-transform uppercase
  display inline-block
  padding 12px 24px
  text-transform uppercase
  font-size ($defaultFontSize*0.8125)
  color white
  letter-spacing 0.08em
  font-weight $fontWeightBold
  border-radius 4px
  cursor: pointer

  &.rounded
    font-weight $fontWeightRegular
    padding 5px 14px
    border-radius 100px
    background rgba(black,0.3)
    box-shadow 0 0 1px solid rgba(white,0.4)
    transition all 300ms ease

    &:hover
      background rgba(black,0.6)

  &.full-width
    font-size ($defaultFontSize*3)
    color white
    background $green
    padding 25px 0
    width 100%
    display block
    text-transform capitalize
    text-align center
    letter-spacing 0
    transition all 300ms ease
    border-radius 0

    &:hover
      background darken($green,20%)

  &.disabled
    cursor default


// FORMS

.form
  div
    position relative

input
textarea
  color $dark
  font-family $body
  font-size ($defaultFontSize*1.125)
  width 100%
  padding 16px 0 16px 40px
  background transparent
  border-bottom 1px solid rgba(black, 0.2)
  position relative
  -webkit-appearance none
  border-radius 0

textarea
  min-height 200px
  resize none

input[type=button]
  margin 20px 0 0 0
  background $darkblue
  trasition background 300ms ease

#submit_btn
  &.sent
    background $green

.form
  .icon
    position absolute
    left 0
    top 17px
    width 24px
    height 24px
    background-size contain
    background-position center center
    background-repeat no-repeat

    &.name
      background-image url('../img/form/name.svg')

    &.email
      background-image url('../img/form/email.svg')

    &.org
      background-image url('../img/form/organization.svg')

    &.message
      background-image url('../img/form/message.svg')


@media $media-tablet

  body
    .wrapper
      width 100% !important

@media $media-mobile

  h1
    font-size ($defaultFontSize*2.4)

  h2
    font-size ($defaultFontSize*2.1)
    line-height ($defaultFontSize*2.7)

    &.small
      font-size ($defaultFontSize*1.8)
      line-height ($defaultFontSize*2.0)

  h3
    font-size ($defaultFontSize*1.5)
    line-height ($defaultFontSize*2.1)

    &.big
      font-size ($defaultFontSize*1.65)
      line-height ($defaultFontSize*2.175)
      margin-bottom 16px

  p
    font-size ($defaultFontSize*1.0)
    line-height ($defaultFontSize*1.8)

    &.small
      font-size ($defaultFontSize*0.875)
      line-height ($defaultFontSize*1.3125)

  .button
    &.full-width
      font-size ($defaultFontSize*2)
      padding 15px 0
