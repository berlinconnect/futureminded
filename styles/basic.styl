// EASING

$easing = cubic-bezier(0.645, 0.045, 0.355, 1)

// COLORS

$dark = #444444
$mid = #626262
$blue = #3FCBF3
$darkblue = #3E4357
$green = #AEDB57
$charitywater = #EFD214
$white = #fafafa

// FONTS

$body = "open-sans", sans-serif

// BREAKPOINTS

$media-desktop-wide = 'all and (min-width: 2180px)'
$media-desktop-big = 'all and (min-width: 1550px)'
$media-desktop = 'all and (min-width: 940px)'
$media-tablet = 'all and (max-width: 940px)'
$media-tablet-portrait = 'all and (max-width: 800px)'
$media-full-width = 'all and (max-width: 749px)'
$media-mobile = 'all and (max-width: 640px)'
$media-mobile-portrait = 'all and (max-width: 480px)'
$media-tiny = 'all and (max-width: 360px)'
$media-too-high = 'screen and (min-height: 1240px)'
$media-mobile-device = 'only mobile'

// GENERAL

html, body
  width 100%

body
  -webkit-font-smoothing antialiased
  background $white
  margin 0 auto
  font-family $body
  color $dark

  .wrapper
    width: 940px
    padding 0 10px
    margin 0 auto

  .divider
    background-color rgba(black,0.1)
    width 100px
    margin 80px auto
    height 1px

// TYPOGRAPHY

h1
  color white
  font-weight $fontWeightLight
  font-size ($defaultFontSize*2.8125)

h2
  font-size ($defaultFontSize*2.5)
  font-weight $fontWeightBold
  margin -16px 0 10px

h3
  color $blue
  font-weight $fontWeightLight
  font-size ($defaultFontSize*1.5)
  line-height ($defaultFontSize*2.25)
  background linear-gradient(45deg, rgba(174,219,87,1.0) 0%, rgba(65,208,250,1.0) 100%);
  -webkit-background-clip text
  -webkit-text-fill-color transparent

a
  color $mid
  text-decoration none

p
  font-size ($defaultFontSize*1.125)
  line-height ($defaultFontSize*1.6875)
  font-weight $fontWeightLight

blockquote
  padding-left 20px
  border-left 3px solid rgba(black,0.1)

// FUNCTIONAL CLASSES

.hidden
  display none !important

.center
  text-align center

.inline
  display inline

.right
  float right

.left
  float left

.clearfix
  clear both


// COLUMNS

.cols
  font-size 0

  .col
    vertical-align top
    display inline-block

  .col-33
    width 33.334%

  .col-50
    width 50%

  .col-60
    width 60%

  .col-40
    width 40%

// BUTTONS

.button
  text-transform uppercase

  &.rounded
    color white
    font-size ($defaultFontSize*0.8125)
    letter-spacing 0.08em
    padding 5px 14px
    border-radius 100px
    background rgba(black,0.3)
    box-shadow 0 0 1px solid rgba(white,0.4)
    transition all 300ms ease

    &:hover
      background rgba(black,0.6)