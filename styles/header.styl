.navigation
  position fixed
  top 0
  left 0
  background-color rgba(white, 0.9)
  width 100%
  height 70px
  box-shadow: 0 1px 2px rgba(black, 0.06)
  z-index: 10

  .logo
    display inline-block
    height 37px
    margin-top 15px

  .menu
    display inline-block
    vertical-align middle
    font-size ($defaultFontSize * 0.875)
    font-weight $fontWeightHeavy
    float right
    margin 24px 0 0 0

    li
      display inline
      margin 0 0 0 10px

      &:last-child
        margin 0
