.navigation
  position fixed
  -webkit-backface-visibility hidden
  -webkit-transform translateZ(0)
  top 0
  left 0
  background-color rgba(white, 0.9)
  width 100%
  height 70px
  box-shadow: 0 1px 2px rgba(black, 0.06)
  z-index: 10

  .logo
    display inline-block
    height 37px
    margin-top 15px

  .menu-button
    display none

  .menu
    display inline-block
    vertical-align middle
    font-size ($defaultFontSize * 0.875)
    font-weight $fontWeightHeavy
    float right
    margin 24px 0 0 0

    li
      display inline
      margin 0 20px 0 0

      &:last-child
        margin 0

@media $media-full-width

  .navigation
    .menu-button
      width 26px
      position absolute
      right 40px
      top 26px
      transition all 300ms ease
      display block

      &.active
        transform scale(1.1)

      span
        display block
        background-color rgba(black,0.5)
        height 2px
        margin 0 0 6px

        &:last-child
          margin 0

    .menu
      position absolute
      top 46px
      right 20px
      width 200px
      background rgba(white,0.9)
      box-shadow: 0 1px 2px rgba(black, 0.06)
      border-radius 0 0 4px 4px
      display none
      transform translateY(-30px)
      transition all 300ms 300ms ease
      opacity: 0

      &.active
        display block
        transform translateY(0)
        opacity: 1

      li
        display block
        padding 0
        margin 0
        box-shadow inset 0 -1px 0 rgba(black,0.06)

        a
          padding 16px 20px
          display block

        &:last-child
          box-shadow none

        &:hover
          background $blue

          a
            color white
